<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="reservationForm" alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="application.renter.MakeReservationController" prefWidth="600" prefHeight="400" style="-fx-background-color: lightgreen;">
    <!-- Title -->
    <children>
       <!--   <Label text="Rent Vehicle" spacing="20" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black; -fx-padding: 20;"/>-->
        
        <!-- Start Date -->
        <Label text="Start Date" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- End Date -->
        <Label text="End Date" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Driver Needed -->
        <Label text="Driver Needed" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <CheckBox fx:id="driverNeededField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Submit Button -->
        <Button text="Proceed to Payment" fx:id="submitButton" GridPane.rowIndex="4" GridPane.columnIndex="1" onAction="#handleReserveButton"/>
    </children>
</GridPane>
